@model User
@{
    Layout = "~/Views/Shared/_LoginAndRegisterLayout.cshtml";
}

<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form asp-action="Register" method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="Firstname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Firstname" type="text" placeholder="Your First name" />
                    </div>

                     <div class="form-group">
                        <label for="Lastname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Lastname" type="text" placeholder="Your Last name" />
                    </div>

                    <div class="form-group">
                        <label for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Username" type="text" placeholder="Your Username" />
                    </div>

                    <div class="form-group">
                        <label for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" type="text" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label for="Password"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="Password" type="Password" placeholder="password" />
                    </div>
                    <div class="form-group">
                        <h4> Who Are You?</h4>
                    </div>
                    <div class="form-group">
                        <select asp-for="Roleid" class="form-control" id="Roles" name="Roleid">
                            <option value=2>Chef</option>
                            <option value=3>User</option>
                            
                        </select>
                    </div>




                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                    <div asp-validation-summary="All" class="text-danger">
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/LoginAndRegister/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>
<script src="~/LoginAndRegister/vendor/jquery/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/LoginAndRegister/js/main.js"></script>