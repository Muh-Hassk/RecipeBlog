namespace RecipeBlog
@{
    var dbContext = new ModelContext();
    var contactUs = dbContext.Contactus.FirstOrDefault();
    var home = dbContext.Homepages.FirstOrDefault();
    var aboutUs = dbContext.Aboutuspages.FirstOrDefault();
    var imagePath = aboutUs?.Imagepath;

}

<!DOCTYPE html>
